# ===========================
# SuvFin - Configuração
# ===========================

# --- App ---
APP_NAME=SuvFin
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# --- WhatsApp Cloud API (Meta) ---
WHATSAPP_API_VERSION=v21.0
WHATSAPP_ACCESS_TOKEN=seu_token_aqui
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=seu_business_account_id
WEBHOOK_VERIFY_TOKEN=seu_token_de_verificacao_seguro

# --- Banco de Dados (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/suvfin

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Anthropic (Claude AI) ---
ANTHROPIC_API_KEY=sk-ant-sua_chave_aqui
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- AWS S3 / Cloudflare R2 (Storage de Comprovantes) ---
S3_ENDPOINT_URL=https://seu-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=sua_access_key
S3_SECRET_ACCESS_KEY=sua_secret_key
S3_BUCKET_NAME=suvfin-receipts
S3_REGION=auto

# --- AbacatePay (Pagamentos PIX) ---
ABACATEPAY_API_KEY=sua_chave_abacatepay_aqui
ABACATEPAY_WEBHOOK_SECRET=seu_secret_do_webhook
PREMIUM_PRICE_CENTS=990

# --- App URLs ---
APP_URL=https://suvfin.com
SUVFIN_FRONTEND_URL=https://suvfin.com

# --- Sentry (Monitoramento) ---
SENTRY_DSN=https://xxx@sentry.io/xxx

# --- Celery ---
CELERY_BROKER_URL=redis://localhost:6379/1
